<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.RevSb_11.NoActionBar">
        <item name="android:itemBackground">@color/fourth</item>
        <item name="android:actionMenuTextColor">@color/third</item>
        <item name="android:statusBarColor">@color/third</item>

    </style>
    <style name="AppTheme.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:itemBackground">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlNormal">@color/design_default_color_primary</item>
        <item name="colorButtonNormal">@color/design_default_color_primary</item>
        <item name="colorSwitchThumbNormal">@color/design_default_color_primary</item>


        <item name="colorControlActivated">#FF4D00</item>

        <!-- неактивное состояние ползунка -->


        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/design_default_color_primary</item>
    </style>
    <style name="SwitchTextAppearence">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>