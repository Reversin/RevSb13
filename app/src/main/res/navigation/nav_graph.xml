<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.revsb_11.views.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">
        <argument
            android:name="firstFragmentArgument"
            app:argType="string" />
        <argument
            android:name="firstFragmentArgument2"
            app:argType="string" />

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/secondFragment">
            <argument
                android:name="secondFragmentArgument"
                app:argType="string" />
        </action>

    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.revsb_11.views.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">
        <argument
            android:name="secondFragmentArgument"
            app:argType="string" />

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/firstFragment">
            <argument
                android:name="firstFragmentArgument"
                app:argType="string" />
            <argument
                android:name="firstFragmentArgument2"
                app:argType="string" />
        </action>

    </fragment>
</navigation>